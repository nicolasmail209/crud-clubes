const fs = require("fs");
const util = require("util");

const leerArchivo = util.promisify(fs.readFile);
const escribirArchivo = util.promisify(fs.writeFile);

async function traerEquipos(equiposJSON) {
  try {
    const equipos = await leerArchivo(equiposJSON, "utf-8");
    return equipos;
  } catch (err) {
    console.log("Hubo un error en la funcion traerEquipos: " + err);
    return err;
  }
}

async function guardarEquipos(equiposJSON, datos){
  try{
    await escribirArchivo(equiposJSON, datos);
    return;
  }
  catch(err){
    console.log("Hubo un error en la funcion guardarEquipos" + err);
    throw err;
  }
}

module.exports = {
  traerEquipos,
  guardarEquipos
};
